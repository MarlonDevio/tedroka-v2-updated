<div class="p-2 component__cart__article__card bg-white shadow-[0_3px_20px_-10px_rgba(237,6,6,0.4)] rounded-md relative">
  <div class="grid items-center gap-2 sm:grid-cols-5">
    <figure class="items-center justify-center w-full h-full flex p-1 text-center rounded-md bg-gradient-to-tr from-gray-400 via-gray-200 to-gray-100 shrink-0 grow-0 overflow-hidden col-span-2">
      {% if product.image %}
        <img
          width="250"
          height="250"
          src="{{ product.image |  image_url: width: '250px'  }}"
          alt="{{ product.title |  escape }}"
          class="object-cover "
        >
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover border' }}
      {% endif %}
    </figure>

    <div class="p-2 col-span-3">
      <h2 class="text-md font-bold text-red-700">{{ product.product.title | remove: 'Bekijk' | truncatewords: 5 }}</h2>

      <div class="pl-4 mt-3 relative space-y-2 text-sm text-gray-500 list-disc">
        <p class="truncated__description">
          {{ product.product.description | strip_html | truncatewords: 20 }}
        </p>
      </div>

      <div class="flex flex-wrap items-center justify-between gap-4 mt-6">
        <div class="flex items-center gap-3">
          <p class="text-sm text-gray-500">Aantal:</p>
          <button
            id="decrement"
            type="button"
            class="flex items-center justify-center w-5 h-5 text-white bg-red-600 rounded-full outline-none"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-2 fill-white" viewBox="0 0 124 124" fill="#ffff">
              <path d="M112 50H12C5.4 50 0 55.4 0 62s5.4 12 12 12h100c6.6 0 12-5.4 12-12s-5.4-12-12-12z" fill="#ffff" data-original="#ffff"></path>
            </svg>
          </button>
          <span id="quantity" class="font-bold text-sm leading-[16px]">2</span>
          <button
            id="increment"
            type="button"
            class="flex items-center justify-center w-5 h-5 bg-red-600 rounded-full outline-none"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-2 fill-white" viewBox="0 0 42 42">
              <path d="M37.059 16H26V4.941C26 2.224 23.718 0 21 0s-5 2.224-5 4.941V16H4.941C2.224 16 0 18.282 0 21s2.224 5 4.941 5H16v11.059C16 39.776 18.282 42 21 42s5-2.224 5-4.941V26h11.059C39.776 26 42 23.718 42 21s-2.224-5-4.941-5z" data-original="#ffff"></path>
            </svg>
          </button>
        </div>

        <div>
          <h4 class="text-lg font-bold text-red-700">$70.00</h4>
        </div>
      </div>

      <div class="grid grid-cols-2 mt-6 text-center divide-x border-y">
        <button
          data-cart-action="view-details"
          type="button"
          class="flex items-center justify-center py-3 text-sm font-semibold text-gray-500 bg-transparent hover:bg-gray-100"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-3.5 fill-current mr-3 inline-block"
            viewBox="0 0 128 128"
          >
            <path d="M64 104C22.127 104 1.367 67.496.504 65.943a4 4 0 0 1 0-3.887C1.367 60.504 22.127 24 64 24s62.633 36.504 63.496 38.057a4 4 0 0 1 0 3.887C126.633 67.496 105.873 104 64 104zM8.707 63.994C13.465 71.205 32.146 96 64 96c31.955 0 50.553-24.775 55.293-31.994C114.535 56.795 95.854 32 64 32 32.045 32 13.447 56.775 8.707 63.994zM64 88c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm0-40c-8.822 0-16 7.178-16 16s7.178 16 16 16 16-7.178 16-16-7.178-16-16-16z" data-original="#000000"></path>
          </svg>
          Lees Meer
        </button>
        <button
          data-cart-action="remove-item"
          type="button"
          class="flex items-center justify-center py-3 text-sm font-semibold text-gray-500 bg-transparent hover:bg-gray-100"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="inline-block w-3 mr-3 fill-current"
            viewBox="0 0 390 390"
          >
            <path d="M30.391 318.583a30.37 30.37 0 0 1-21.56-7.288c-11.774-11.844-11.774-30.973 0-42.817L266.643 10.665c12.246-11.459 31.462-10.822 42.921 1.424 10.362 11.074 10.966 28.095 1.414 39.875L51.647 311.295a30.366 30.366 0 0 1-21.256 7.288z" data-original="#000000"></path>
            <path d="M287.9 318.583a30.37 30.37 0 0 1-21.257-8.806L8.83 51.963C-2.078 39.225-.595 20.055 12.143 9.146c11.369-9.736 28.136-9.736 39.504 0l259.331 257.813c12.243 11.462 12.876 30.679 1.414 42.922-.456.487-.927.958-1.414 1.414a30.368 30.368 0 0 1-23.078 7.288z" data-original="#000000"></path>
          </svg>
          Verwijder
        </button>
      </div>
    </div>
  </div>
</div>

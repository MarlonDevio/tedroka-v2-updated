<li class="py-8 bg-gray-800 rounded-md ">
  <div class="flex flex-col gap-4 mx-auto max-w-7xl">
    <div class="grid items-center grid-cols-2 gap-4 ">
      {% for product in collections[product_handle].products %}
        <div class="flex justify-between gap-4">
          <a
            href="{{ product.url }}"
            class="px-4 py-2 text-base text-white uppercase transition-all duration-300 ease-in-out rounded-md hover:bg-white hover:text-primary hover:cursor-pointer"
          >
            {{- product.title -}}
          </a>
          <a href="{{ product.url }}">
            <img
              class="transition-all duration-300 ease-in-out rounded-sm max-h-auto hover:scale-125 max-w-24"
              src="{{ product.featured_image | img_url: 'medium' }}"
              alt="{{  product.title }}"
            >
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</li>

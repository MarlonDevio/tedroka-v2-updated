<article class='mx-auto my-4 flex w-full flex-col overflow-hidden rounded-2xl border border-gray-300 bg-white text-gray-900 transition hover:translate-y-2 hover:shadow-lg'>
  <a class='mx-auto flex w-full flex-col overflow-hidden' href='{{ article.url }}'>
    <figure>
      <img
        src='{{ article.image | image_url: width: '500px'}}'
        class='w-full object-cover object-center'
        alt='{{ article.image.alt }}'
        width='500'
        height='500'
        style='height: 14rem;'
      >
    </figure>
    <div class='flex flex-auto flex-col px-6 py-5'>
      <span class='mb-2 flex items-center text-sm font-semibold'>
        <svg
          class='mr-1'
          xmlns='http://www.w3.org/2000/svg'
          aria-hidden='true'
          role='img'
          width='1em'
          height='1em'
          preserveAspectRatio='xMidYMid meet'
          viewBox='0 0 24 24'
        >
          <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.272 10.445L18 2m-8.684 8.632L5 2m7.761 8.048L8.835 2m5.525 0l-1.04 2.5M6 16a6 6 0 1 0 12 0a6 6 0 0 0-12 0Z" />
        </svg>
        Awards</span
      >
      <h3 class='xl:text-md mb-3 mt-4 text-base font-semibold'>{{ article.title }}</h3>
      <p class='mb-4 text-base font-light'>
        {{ article.content | strip_html | truncate: 50 }}
      </p>
      <button class='mt-auto inline-block cursor-pointer select-none self-start rounded-md border border-secondary bg-secondary px-2 py-1 text-center align-middle text-sm font-semibold leading-normal text-white no-underline shadow-sm'>
        <a href='{{ article.url }}'>Read More</a>
      </button>
    </div>
  </a>
</article>

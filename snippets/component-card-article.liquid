<article class="flex flex-col w-full mx-auto my-4 overflow-hidden text-gray-900 transition bg-white border border-gray-300 rounded-2xl hover:translate-y-2 hover:shadow-lg">
  <a class="flex flex-col w-full mx-auto overflow-hidden" href="{{ article.url }}">
    <figure>
      <img
        src="{{ article.image | image_url: width: '500px'}}"
        class="object-cover object-center w-full"
        alt="{{ article.image.alt }}"
        width="500"
        height="500"
        style="height: 14rem;"
      >
    </figure>
    <div class="flex flex-col flex-auto px-6 py-5">
      <span class="flex items-center mb-2 text-sm font-semibold">
        <svg
          class="mr-1"
          xmlns="http://www.w3.org/2000/svg"
          aria-hidden="true"
          role="img"
          width="1em"
          height="1em"
          preserveAspectRatio="xMidYMid meet"
          viewBox="0 0 24 24"
        >
          <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.272 10.445L18 2m-8.684 8.632L5 2m7.761 8.048L8.835 2m5.525 0l-1.04 2.5M6 16a6 6 0 1 0 12 0a6 6 0 0 0-12 0Z" />
        </svg>
        Awards</span
      >
      <h3 class="mt-4 mb-3 text-base font-semibold xl:text-md">{{ article.title }}</h3>
      <p class="mb-4 text-base font-light">
        {{ article.content | strip_html | truncate: 50 }}
      </p>
      <button class="self-start inline-block px-2 py-1 mt-auto text-sm font-semibold leading-normal text-center text-white no-underline align-middle border rounded-md shadow-sm cursor-pointer select-none bg-secondary border-secondary">
        <a href="{{ article.url }}">Read More</a>
      </button>
    </div>
  </a>
</article>

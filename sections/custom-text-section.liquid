{% schema %}
{
  "name": "Custom Text Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Your Heading Here"
    },
    {
      "type": "textarea",
      "id": "body_text",
      "label": "Body Text",
      "default": "Enter your content here."
    }
  ],
  "presets": [
    {
      "name": "Custom Text"
    }
  ]
}
{% endschema %}

<div class="custom-text-section">
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.body_text }}</p>
</div>
{% schema %}
{
  "name": "Custom Text Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading Text",
      "default": "Your Heading Here"
    },
    {
      "type": "richtext",
      "id": "body_text",
      "label": "Body Text",
      "default": "<p>Enter your content here.</p>"
    }
  ],
  "presets": [
    {
      "name": "Custom Text"
    }
  ]
}
{% endschema %}

<div class="custom-text-section">
  <h2>{{ section.settings.heading }}</h2>
  <div>{{ section.settings.body_text }}</div>
</div>
<section class="font-[sans-serif] bg-white h-full">

  <div class="p-6 mx-auto max-w-7xl max-lg:max-w-3xl">
    {% if cart.item_count > 0 %}
      <div class="flex flex-wrap items-center justify-between">
        <h1 class="text-2xl font-extrabold text-secondary">{{ section.settings.section_title }}</h1>
        <a href="{{ routes.all_products_collection_url }}" class="w-full px-12 py-3 text-sm font-medium text-center text-white rounded-md shadow bg-secondary md:text-left hover:bg-red-700 focus:outline-none focus:ring active:bg-secondary sm:w-auto">
          Winkel Verder
        </a>
      </div>
      <form
        action="{{ routes.cart_url }}"
        method="POST"
        novalidate>
        <div class="relative grid gap-6 mt-8 lg:grid-cols-3">
          {% comment %} Rendering cards {% endcomment %}
          <div class="flex flex-col gap-4 lg:col-span-2">
            {% for product in cart.items %}
              {% render 'component-cart-product-card'
                , product: product
                , index: forloop.index %}
            {% endfor %}
          </div>

          {% comment %} Summary Component {% endcomment %}
          <aside class="bg-white h-max rounded-md p-4 shadow-[0_3px_20px_-10px_rgba(237,6,6,0.4)] sticky top-0">
            <h2 class="text-lg font-bold text-red-700">{{ section.settings.summary_title }}</h2>

            <ul class="mt-3 space-y-3 text-sm text-gray-500">
              <li class="flex flex-wrap items-end gap-4 font-bold uppercase">
                Subtotaal
                <span class="ml-auto text-lg font-bold text-secondary">{{ cart.total_price | money }}</span>
              </li>
            </ul>

            <button
              name="checkout"
              type="submit"
              class="mt-6 text-sm px-5 py-2.5 w-full bg-secondary hover:bg-red-700 active:bg-red-500 tracking-wide text-white rounded-md">
              Verder naar Checkout
            </button>

            <div class="mt-6 space-y-6">
              <div>
                <h4 class="mb-3 text-sm font-bold text-red-700">Veilige betaling</h4>
                <p class="text-sm text-gray-500">
                  Ervaar gemoedsrust met onze veilige betaalopties, die ervoor zorgen dat uw transacties beschermd zijn.
                </p>
              </div>
              <div>
                <h4 class="mb-3 text-sm font-bold text-red-700">Gratis levering</h4>
                <p class="text-sm text-gray-500">
                  Geniet van het gemak van gratis levering op al uw bestellingen, wat zorgt voor een kosteneffectieve en naadloze winkelervaring.
                </p>
              </div>
              <div>
                <h4 class="mb-3 text-sm font-bold text-red-700">Makkelijke retour</h4>
                <p class="text-sm text-gray-500">
                  Vereenvoudig uw winkelervaring met probleemloze retourzendingen. Ons eenvoudige retourproces zorgt voor gemak en klanttevredenheid.
                </p>
              </div>
            </div>
          </aside>
        </div>
      </form>
    {% else %}
      <div class="flex items-center justify-center flex-grow h-full max-w-6xl mx-auto mt-auto">
        <div class="text-center">
          <h1 class="my-4 text-3xl text-primary">Winkelwagen</h1>
          <p class="text-primary">Je winkelwagen is leeg</p>
          <div class="py-4 my-4">
            <a href="{{ routes.all_products_collection_url }}" class="inline-block w-full px-12 py-3 text-sm font-medium text-white bg-red-600 rounded-md shadow hover:bg-red-700 focus:outline-none focus:ring active:bg-red-500 sm:w-auto">Winkel Verder</a>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Template Cart",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Winkelwagen"
      },
      {
        "type": "text",
        "id": "subtotal_title",
        "label": "Subtotal Title",
        "default": "Subtotaal"
      },
      {
        "type": "text",
        "id": "total_title",
        "label": "Total Title",
        "default": "Totaal"
      }
    ]
  }
{% endschema %}
{% assign main_menu_navigation_links = linklists['main-menu-navigation-links'].links %}

<header class="relative bg-primary px-2 py-4 md:px-5 md:py-3">
  <div class="mx-auto hidden max-w-7xl items-center justify-between laptop:flex">
    {% render 'navigation-container', links: main_menu_navigation_links, classes: 'text-white list-none' %}

    {% render 'logo' %}
    {% comment %}Second block{% endcomment %}
    <ul class="nav-links-container flex gap-2 justify-self-end">
      <li class="flex items-center px-2">
        <a
          class="main-menu-link flex p-1.5 text-white"
          href="{{ routes.cart_url }}"
        >
          {%- render 'cart-svg' -%}
        </a>
      </li>
      <li class="flex items-center px-2">
        <a
          class="main-menu-link flex p-1.5 text-white"
          href="{{ routes.search_url }}"
        >
          {%- render 'icon-search-svg' -%}
        </a>
      </li>
      <li class="flex items-center px-2">
        <a
          class="main-menu-link flex p-1.5 text-white"
          href="https://tedroka.nl/apps/parcelpanel"
        >
          {% render 'track-order-svg' %}
        </a>
      </li>
    </ul>
  </div>
</header>

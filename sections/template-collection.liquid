<section class="py-[50px]">
  {% paginate collection.products by section.settings.number_of_products_per_page %}
    <h1 class="text-3xl text-center md:text-4xl lg:text-5xl">{{ collection.title }}</h1>

    <div class="mx-auto max-w-7xl">
      {% comment %} Grid container {% endcomment %}
      <div class="grid grid-cols-1 gap-4 tablet:grid-cols-2 laptop:grid-cols-3 ">
        {% for product in collection.products %}
          {% render 'product-card', product: product %}
        {% else %}
          <p>Collection is empty</p>
        {% endfor %}
      </div>
    </div>
    <!-- TODO fix pagination -->
    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</section>

{% schema %}
{
  "name": "Template Collection",
  "settings": [
    {
      "type": "number",
      "id": "number_of_products_per_page",
      "label": "Number of products per page",
      "default": 6
    }
  ]
}
{% endschema %}
